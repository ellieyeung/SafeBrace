<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.LoginActivity"
    android:backgroundTint="#00ffea"
    android:background="#00ffea"
    android:weightSum="1">

    <!-- Login progress -->

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="246dp"
        android:layout_height="47dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SafeBrace"
        android:id="@+id/textView2"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#302e2e"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06" />
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TextView
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="  Safety at the press of a button."
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView3" />
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <EditText
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:gravity="center_horizontal|start"
        android:layout_gravity="center_horizontal" />
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <EditText
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password" />

    <Button
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:id="@+id/email_sign_in_button"
        android:layout_gravity="center_horizontal"
        android:textColor="#00ffee"
        android:textColorHighlight="#ffffff"
        android:background="#ffffff"
        android:text="Login"
        android:clickable="true" />
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="OR"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.18"
        android:height="10dp"
        android:gravity="bottom"
        android:capitalize="words"
        android:textColor="#000000"
        android:visibility="visible" />
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <Button
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:text="Login with facebook"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:textColor="#ffffff"
        android:background="#001eff"
        android:clickable="true" />
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <Button
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:text="Login with Twitter"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:textColor="#ffffff"
        android:background="#00c4ff"
        android:clickable="true" />
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create New Account"
        android:id="@+id/textView4" />

</LinearLayout>
